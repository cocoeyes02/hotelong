<h1>ようこそhotelongへ</h1>
<h2>ログイン</h2>
<%= form_tag :session do %>
  <table id="login_form">
    <tr>
      <td style="text-align: right">ユーザーID：</td>
      <td><%= text_field_tag 'user_id', "", style: "width: 120px" %></td>
    </tr>
    <tr>
      <td style="text-align: right">パスワード：</td>
      <td><%= password_field_tag 'password', "", style: "width: 120px" %></td>
    </tr>
    <tr>
      <td colspan="2" style="text-align: center">
        <%= submit_tag 'ログイン' %></td>
    </tr>
  </table>
<% end %>
<%= link_to '新規登録はこちら', :new_member %>