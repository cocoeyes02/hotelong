<h2>会員一覧</h2>

<% if @members.present? %>
  <table class="table">
    <tr>
      <th scope="row">背番号</th>
      <th scope="row">ユーザー名</th>
      <th scope="row">氏名</th>
      <th scope="row">操作</th>
    </tr>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.id %></td>
        <td><%= member.user_id %></td>
        <td><%= link_to member.name, [:admin, member] %></td>
        <td>
          <%= link_to '編集', [:edit, :admin, member], class: 'btn btn-primary' %>
          <%= link_to '削除', [:admin, member], method: :delete,
                      data: { confirm: '本当に削除しますか?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
    <p>会員情報がありません。</p>
<% end %>