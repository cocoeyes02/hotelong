<h2>プラン一覧</h2>
<table class="table">
  <tr>
    <th scope="row">プラン名</th>
    <th scope="row">利用可能人数</th>
    <th scope="row">値段</th>
  </tr>
  <% @plans.each do |plan| %>
    <% # ノープランは表示しない
       if plan.id == 1
         next
       end
    %>
    <tr>
      <td><%= plan.name %></td>
      <td><%= plan.apply_count %></td>
      <td><%= plan.price %></td>
    </tr>
  <% end %>
</table>