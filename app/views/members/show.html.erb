<h1>会員確認画面</h1>

<table>
  <tr>
    <th>ユーザ名</th>
    <td><%= @member.user_id %></td>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= @member.name %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td>
      <% if @member.sex == 0 %>
          男
      <% else %>
          女
      <% end %>
    </td>
  </tr>
  <tr>
    <th>電話</th>
    <td><%= @member.tel %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @member.address %></td>
  </tr>
  <tr>
    <th>生年月日</th>
    <td><%= @member.birthday %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @member.email %></td>
  </tr>
</table>

<div>
  <p><%= link_to '編集', [:edit, @member] %></p>
  <p><%= link_to '削除', @member, method: :delete,
                data: { confirm: '本当に削除しますか?' } %></p>
  <button type="button" onclick="history.back()">戻る</button>
</div>