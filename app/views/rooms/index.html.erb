<h1>ホテル予約一覧</h1>
<% if flash.notice %><p><%= flash.notice %></p><% end %>
<%= render 'search'%>
<table>
  <tr>
    <th>部屋番号</th>
    <% 28.times do |i| %>
      <th><%= (Date.today + i.day).strftime('%m/%d') %></th>
    <% end %>
  </tr>
  <% Array(@rooms).each do |room| %>
    <tr>
      <td><%= room.room_number %></td>
      <% 28.times do |i| %>
        <td>
          <% if Reservation.isEmptyRoomByRoomNumber(room.room_number, Date.today + i.day) %>
              <%= link_to '○', room %>
          <% else %>
              ×
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>